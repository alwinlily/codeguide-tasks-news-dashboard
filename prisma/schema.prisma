generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TodoTask {
  id        String   @id @default(cuid())
  title     String
  dueDate   DateTime
  isUrgent  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?  @map("user_id")

  @@map("todo_tasks")
  @@index([dueDate])
  @@index([isUrgent])
  @@index([createdAt])
}

model CompanyNews {
  id          String   @id @default(cuid())
  title       String
  content     String
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String?  @map("user_id")

  @@map("company_news")
  @@index([publishedAt])
  @@index([createdAt])
}
